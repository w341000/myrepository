<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 订单管理-->
		<package name="order" namespace="/control/order" extends="control-default">
		
		<action name="list" class="orderListAction">
			<result>/WEB-INF/page/book/orderlist.jsp</result>
		</action>
		
		<action name="view" class="orderViewAction">
			<result>/WEB-INF/page/book/orderview.jsp</result>
		</action>
		<action name="query" ><result>/WEB-INF/page/book/queryorder.jsp</result>
		</action>
		<action name="manage_*" class="orderManageAction" method="{1}">
				<result name="modifyContactInfoUI">/WEB-INF/page/book/modifyContactInfo.jsp</result>
				<result name="modifyDeliverInfoUI">/WEB-INF/page/book/modifyDeliverInfo.jsp</result>
				<result name="modifyPaymentWayUI">/WEB-INF/page/book/modifyPaymentWay.jsp</result>
				<result name="modifyDeliverWayUI">/WEB-INF/page/book/modifyDeliverWay.jsp</result>
				<result name="modifyProductAmountUI">/WEB-INF/page/book/modifyProductAmount.jsp</result>
				<result name="modifyDeliverFeeUI">/WEB-INF/page/book/modifydeliverFee.jsp</result>
				<result name="printOrder">/WEB-INF/page/book/print.jsp</result>
				<result name="list" type="redirectAction">
					<param name="namespace">/control/order</param>
					<param name="actionName">list</param>
				</result>
				<result name="addmessage">/WEB-INF/page/book/ordermessage.jsp</result>
				
		</action>
	</package>
	
	<package name="lockorder" namespace="/control/lockorder" extends="control-default">
		<action name="list" class="lockOrderListAction">
			<result>/WEB-INF/page/book/orderlist.jsp</result>
		</action>
	</package>

</struts>    
