<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 产品管理-->
		<package name="frontproduct" namespace="/product" extends="custom-default">
		<action name="list" class="frontProductAction">
			<result name="list_image">/WEB-INF/page/product/frontpage/productlist.jsp</result>
			<result name="list_imagetext">/WEB-INF/page/product/frontpage/productlist_text.jsp</result>
		</action>
		<action name="view_*" class="viewProductAction" method="{1}"><result >/WEB-INF/page/product/frontpage/productview.jsp</result></action>
		<action name="switch_*" class="productSwitchAction" method="{1}">
			<result name="topsell">/WEB-INF/page/product/frontpage/topsell.jsp</result>
			<result name="viewHistory">/WEB-INF/page/product/frontpage/viewHistory.jsp</result>
			<result name="showimage">/WEB-INF/page/product/frontpage/showimage.jsp</result>
			<result name="commend">/WEB-INF/page/product/frontpage/commend.jsp</result>
			
		</action>
		
		
		<action name="query" class="productSearchAction">
			<result >/WEB-INF/page/product/frontpage/queryproductlist.jsp</result>
		</action>
	</package>
	
</struts>    
