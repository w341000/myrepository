<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 用户管理-->
		<package name="user" namespace="/user" extends="custom-default">
		
		<action name="reg_*" class="buyerRegAction" method="{1}">
			<result name="regUI">/WEB-INF/page/user/userReg.jsp</result>
		</action>
		
		<action name="logon_*" class="buyerLogonAction" method="{1}">
			<result name="logon">/WEB-INF/page/user/logon.jsp</result>
		</action>
		<action name="logout" class="buyerLogoutAction" />
		<action name="findpassword"><result>/WEB-INF/page/user/findPassword.jsp</result></action>
		<!-- 找回密码,发送电子邮件 -->
		<action name="post_*" class="findPasswordAction" method="{1}">
			<result name="getpassword">/WEB-INF/page/user/logon.jsp</result>
			<result name="findpassword" >/WEB-INF/page/user/findPassword.jsp</result>
			<result name="findpassword2" >/WEB-INF/page/user/findPassword2.jsp</result>
			<result name="findpassword3" >/WEB-INF/page/user/findPassword3.jsp</result>
			<result name="errorresult" >/WEB-INF/page/user/errorresult.jsp</result>
		</action>
		
	</package>
	
	<!-- 管理界面的用户 -->
	<package name="usercontrol" namespace="/control/user" extends="control-default">
		<action name="list_*" class="buyerListAction" method="{1}">
			<result >/WEB-INF/page/user/userlist.jsp</result>
		</action>
		<action name="query" ><result >/WEB-INF/page/user/query.jsp</result></action>
		
		<action name="manage_*"  class="buyerManageAction" method="{1}"></action>
	</package>
	
</struts>    
