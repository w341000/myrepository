<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 权限管理-->
			<!-- 部门 -->
		<package name="department" namespace="/control/department" extends="control-default">
		<action name="list" class="departmentListAction" >
			<result>/WEB-INF/page/department/departmentlist.jsp</result>
		</action>
		
		<action name="manage_*" class="departmentManageAction"  method="{1}">
			<result name="add">/WEB-INF/page/department/adddepartment.jsp</result>
			<result name="edit">/WEB-INF/page/department/editdepartment.jsp</result>
		</action>
	</package>
	
	<!-- 员工 -->
	<package name="employee" namespace="/control/employee" extends="control-default">
		
		<action name="list" class="employeeListAction" >
			<result>/WEB-INF/page/department/employeelist.jsp</result>
		</action>
		<action name="manage_*" class="employeeManageAction"  method="{1}">
			<result name="add">/WEB-INF/page/department/addemployee.jsp</result>
			<result name="usernameExist">/WEB-INF/page/department/usernameIsExsit.jsp</result>
			<result name="edit">/WEB-INF/page/department/editemployee.jsp</result>
			<result name="query">/WEB-INF/page/department/query.jsp</result>
			<result name="privilegeSet">/WEB-INF/page/department/privilegeSet.jsp</result>
		</action>
	</package>
	<!-- 员工登录验证处理 -->
	<package name="employeelongon" namespace="/employee" extends="custom-default">
		
		<action name="logon" class="employeeLogonAction" >
			<result>/WEB-INF/page/department/logon.jsp</result>
			<result name="control" type="redirectAction">
				<param name="namespace">/control/center</param>
				<param name="actionName">main</param>
			</result>
		</action>
		<action name="logout" class="employeeLogoutAction" >
			<result type="redirectAction">
				<param name="namespace">/employee</param>
				<param name="actionName">logon</param>
			</result>
		</action>
		
	</package>
	


</struts>    
